<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".SynthesizerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hello World!"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="1dp"
            tools:text="Hello World!" />

        <Button
            android:id="@+id/mChallenge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButton8Click"
            android:text="@string/mChallenge1" />

        <Button
            android:id="@+id/eButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:onClick="onButton1Click"
            android:text="@string/mEButton"
            />
            <!---app:layout_constraintTop_toBottomOf="@+id/textView"
                   tools:layout_editor_absoluteX="16dp"-->
        <Button
            android:id="@+id/fButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:onClick="onButton2Click"
            android:text="@string/button2"/>

        <Button
            android:id="@+id/gButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButton3Click"
            android:text="@string/button3" />

        <Button
            android:id="@+id/aButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButton4Click"
            android:text="@string/button4" />

        <Button
            android:id="@+id/bButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButton5Click"
            android:text="@string/button5" />

        <Button
            android:id="@+id/cButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButton6Click"
            android:text="@string/button6" />

        <Button
            android:id="@+id/dButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButton7Click"
            android:text="@string/button7" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>